$(".modal-contain").show();
$("#modal-window").html("<%= escape_javascript(render 'form') %>");

$(function() {

  //close button
  $('#btn-cancel').on('click', function(){
    $('.modal-contain').css("display","none");
  });

  $('.datepicker').datepicker({ dateFormat: 'dd-mm-yy' });
  $('.datepicker1').datepicker({ dateFormat: 'dd-mm-yy' });

  $('.datepicker1').on("change", function(){

  	if($('.datepicker1').val())
  	{
  		var issues = $('.datepicker1').val().split('/');
	  	var year = parseInt(issues[2]) + 10;
	  	var issueDate = issues[0] + "/" + issues[1] + "/" + year; 
	  	$('#expiredate').val(issueDate.replace("/undefined/NaN",""));
  	}
  });

});